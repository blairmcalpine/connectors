generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

enum Difficulty {
  Straightforward
  Medium
  Difficult
  Tricky
}

model Puzzle {
  id         String     @id @default(cuid())
  readableId String     @unique
  name       String
  categories Category[]
  words      Word[]
  createdAt  DateTime   @default(now())
  completions PuzzleCompletion[]

  @@index([readableId])
}

model PuzzleCompletion {
  id          String    @id @default(cuid())
  time        Int
  puzzleId    String
  puzzle      Puzzle    @relation(fields: [puzzleId], references: [id])
  createdAt   DateTime  @default(now())

  @@index([puzzleId])
}

model Category {
  id          String     @id @default(cuid())
  description String
  difficulty  Difficulty
  puzzleId    String
  puzzle      Puzzle     @relation(fields: [puzzleId], references: [id])

  @@index([puzzleId])
}

model Word {
  id         String     @id @default(cuid())
  word       String
  difficulty Difficulty
  puzzleId   String
  puzzle     Puzzle     @relation(fields: [puzzleId], references: [id])

  @@index([puzzleId])
}
